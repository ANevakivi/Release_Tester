{
	"testName":"Resume from idle",
	"Actions":[
		{
			"sub":
			{
				"topic":"creoir/asr/error",
				"payload":"any",
				"failOnReceived":1
			}
		},
		{
			"pub":
			{
				"topic":"creoir/asr/idle",
				"sleep":300,
				"payload":{}
			}
		},
		{
			"sleep":
			{
				"duration":2000
			}
		},
		{
			"pub":
			{
				"topic":"creoir/asr/resumeWakeword",
				"sleep":300,
				"payload":{}
			}
		},
		{
			"sub":
			{
				"topic":"creoir/asr/listening",
				"payload":"any",
				"timeout": 3000
			}
		},
		{
			"play":
			{
				"filePath":"audiofiles/hello_home.wav"
			}
		}
	]
}